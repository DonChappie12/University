@model IEnumerable<User>

<div>
    <h1>Hello Admin</h1>
</div>

    <table class="table table-hover">
        <tr>
            <th>ID#</th>
            <th>UserName</th>
        </tr>
        <tbody>
            @foreach(var user in Model)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.UserName</td>
                    <td>
                        <a href="/@user.Id" class="btn btn-default">Look User Details</a>
                        <!-- TODO Delete button not implemented -->
                        <a asp-area="" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete User</a>
                        <!-- <a href="/delete/@user.Id" class="btn btn-danger">Delete User</a> -->
                    </td>
                </tr>
            }
            </tbody>
        </table>